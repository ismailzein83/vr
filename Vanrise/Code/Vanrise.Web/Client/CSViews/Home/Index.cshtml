<!DOCTYPE html>
<html ng-app="mainModule">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/AngularExtensions")
    @*@Styles.Render("~/Content/Semantic")*@
    @Styles.Render("~/Content/Styles")



</head>
<body ng-controller="mainCtrl">

    <nav class="navbar navbar-inverse navbar-fixed-top vr-nav-custom">
        <div class="container">
            <div class="navbar-header">
                <img src="Client/Images/logoonheader.png" class="minilogo" />
                <img src="Client/Images/01.png" class="img1" />
                <img src="Client/Images/02.png" class="img2" />
               
                

            </div>
            <div id="navbar">

            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div  class="sub-header" ng-class="toogled==true?'sub-header-open':'sub-header-closed'">
        <div class="inner-sub ">
            Welcome {{::userDisplayName}} - <a href="#" ng-click="logout()">Logout</a>
        </div>
       
    </div>
    <div id="wrapper" ng-style="toogled==true?{'padding-left':'225px'}:{'padding-left':'5px'}">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" ng-style="toogled==true?{'width':'250px'}:{'width':'2px'}">

            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" ng-show="toogled==true">
                <div class="panel panel-default toggle-panel ">
                    <div class="panel-heading dll-menu" style="height: 41px;">

                        <span style="font-size: 20px; margin: 6px 4px; position: absolute; right: 5px; top: 5px;" ng-click="toggledpanel()" class=" hand-cursor glyphicon glyphicon-chevron-left "></span>


                    </div>
                </div>
                <div ng-repeat="item in menuItems track by $index" class="panel panel-default menu-item-list">
                    <div ng-class="getParentItemClass(item) ? 'bgcolor-grad-{{item.keyclass}}':'bgcolor-{{item.keyclass}}'" class="panel-heading panel-heading-vr hand-cursor   boxes float-box waves-effect  waves-block dll-menu-theme" data-toggle="collapse" data-parent="#accordion" data-target="#collapse-{{$index}}" aria-expanded="true" aria-controls="collapse-{{$index}}" ng-click="setIndex($index,$event)">
                        <span ng-if="item.Childs.length > 0">
                            <span class="glyphicon " ng-class="item.Icon" style="font-size: 20px; top: 4px;"></span>
                            <span>{{::item.Name}} </span>
                            <span class=" hand-cursor  toggel">

                                <span ng-if="item.Childs.length>0" class="glyphicon glyphicon" ng-class=" menuItemsCurrent == {{$index}} ? 'glyphicon-minus':'glyphicon-plus'" style="font-size: 10px; top: 10px;"></span>

                            </span>
                        </span>

                        <ul class="nav" ng-if="item.Childs.length == 0" data-toggle="collapse" data-parent="#accordion">
                            <li class="dll-menu menu-item-list-ligth" ng-repeat="c in item.Childs">
                                <a class="menulink  " ng-href="{{::item.Location}}">{{::item.Name}}</a>
                            </li>
                        </ul>



                    </div>

                    <div id="collapse-{{$index}}" ng-if="item.Childs.length>0" class="panel-collapse collapse " role="tabpanel" aria-labelledby="collapse-{{$index}}">
                        <div class="panel-body ">
                            <ul class="nav">
                                <li ng-if="c.Childs == undefined" class="waves-effect waves-classic dll-menu menu-item-list-ligth " ng-click="setActiveClass($event,item , c) ;  " ng-repeat="c in item.Childs">
                                    <a class=" menulink" ng-click="setIndexSub($index,$event)" ng-href=" {{::c.Location}}">{{::c.Name}}</a>
                                </li>

                                <li ng-if="c.Childs != undefined" ng-repeat="c in item.Childs" class="dll-menu menu-item-list-ligth ">
                                    <div class="menulink waves-effect waves-block" ng-class="menusubItemsCurrent == $index ? 'down':''" ng-click="setIndexSub($index,$event)" ng-href="">{{::c.Name}}</div>
                                    <ul style="padding-left:15px" class="nav" ng-show="menusubItemsCurrent == $index">
                                        <li ng-repeat="a in c.Childs" class="waves-effect waves-classic ">
                                            <a class=" menulink" style="color:#333;" ng-href="{{::a.Location}}">{{::a.Name}}</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="clock" >
                   @*// Wed 13 May,2105 15:15*@
                    <span ng-bind="clock  | date:'EEE dd MMM , yyyy'"></span>
                    <span class="clockspace"></span>
                    <span style="color: #6a6a6a;font-weight:bold" ng-bind="clock  | date:'hh:mm'"> </span>
                </div>
            </div>

            <div id="collapsedmenu" style="background-color:#ddd;height:100%;width:40px;position:fixed;z-index:10" ng-show="toogled==false">
                <div class="dropdown dropdown-custom-serf leftdiv" >
                    <div class="dropdown-toggle hand-cursor glyphicon glyphicon glyphicon-chevron-right dropdown-item" ng-click="toggledpanel()" >

                    </div>
                </div>

                <div ng-repeat="item in menuItems" class="dropdown dropdown-custom-serf leftdiv " ng-style="{'background-color':'#{{item.color}}; !important'}" ng-mouseenter="showMenu($event)" ng-mouseleave="hideMenu($event)">
                    <div class="dropdown-toggle hand-cursor glyphicon dll-menu-theme dropdown-item" ng-class="item.Icon" id="dropdownMenuCu-{{$index}}" aria-expanded="true" data-toggle="dropdown">

                    </div>
                    <ul class="dropdown-menu dropdown-menu-custom-serf" role="menu" aria-labelledby="dropdownMenuCu-{{$index}}">
                        <li role="presentation">

                            <label class="titel-groupe"> {{::item.name}}</label>
                        </li>
                        <li ng-if="c.Childs == undefined" role="presentation" class="innerlist" ng-repeat="c in item.Childs">

                            <a ng-href="{{::c.Location}}" ng-click="setActiveClass(null,item , c);setIndexSub($index,$event)">{{::c.Name}}</a>

                        </li>
                        <li ng-if="c.Childs != undefined" class="innerlist" ng-repeat="c in item.Childs">
                            <a ng-class="menusubItemsCurrent == $index ? 'down':''" ng-click="$event.preventDefault();$event.stopPropagation();setIndexSub($index,$event) ; setActiveClass(null,item , c);" href="">{{::c.name}}</a>
                            <ul class="nav" ng-show="menusubItemsCurrent == $index">
                                <li ng-repeat="a in c.Childs" class="innerlist">
                                    <a class="menulink" style="padding:0px 0px 0px 30px !important ; color:#333" ng-href="{{::a.Location}}">{{::a.Name}}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="clock collapsed" >
                    @*// Wed 13 May,2105 15:15*@
                    <span ng-bind="clock  | date:'EEE dd MMM , yyyy'"></span>
                    <span class="clockspace"></span>
                    <span style="color: #6a6a6a; font-weight: bold" ng-bind="clock  | date:'hh:mm'"> </span>
                </div>
            </div>
        </div>
    
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid vr-container">
                <div class="row">                    

                    <div class="panel-primary panel-vr his-nav" ng-if="hisnav.length > 0 ">
                        <div class="panel-heading">
                            <span ng-show="showHip"> Nav History </span>
                            <span class="hand-cursor" ng-click="showHip=!showHip ">
                                <span ng-show="showHip" class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                                <span ng-hide="showHip" class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                            </span>

                        </div>
                        <div class="panel-body am-slide-top" ng-show="showHip">
                            <vr-row removeline>
                                <div ng-if="hisnav.length > 0 ">
                                    <div ng-repeat="h in hisnav">
                                        <button class="btn-link" ng-click="hidesubview(h.name,$index)">{{h.Name}}</button>
                                    </div>
                                    <span class="glyphicon glyphicon-circle-arrow-left pull-right hand-cursor" ng-click="hidesubview(hisnav[hisnav.length-1].name,hisnav.length-1)"></span>
                                </div>


                            </vr-row>

                        </div>

                    </div>

                    <div class="col-lg-12" ng-view>


                    </div>

                </div>
            </div>

            <!-- /#page-content-wrapper -->
        </div>


    </div>




</body>
@Scripts.Render("~/bundles/helpers")
@Scripts.Render("~/bundles/JQuery")
@Scripts.Render("~/bundles/Angular")
@Scripts.Render("~/bundles/AngularExtensions")

@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/highchart")
@*@Scripts.Render("~/bundles/Semantic")*@
@Scripts.Render("~/bundles/Javascripts")
@Scripts.Render("~/bundles/ModulesJavascripts")
@Scripts.Render("~/bundles/waves")


</html>