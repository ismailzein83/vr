<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TABS" namespace="TABS.Lookups">

	<class name="LookupType" table="LookupType" dynamic-update="false" lazy="false">
		<cache usage="nonstrict-read-write"/>
		<id name="_LookupTypeID" column="LookupTypeID" unsaved-value="0" access="field">
			<generator class="identity" />
		</id>
		<property name="Name" column="Name" />

		<list name="Values" inverse="true" lazy="false" fetch="select">
			<key column="LookupTypeID" />
			<index column="Ordinal" />
			<one-to-many class="LookupValue" />
		</list>
	</class>

	<class name="LookupValue" table="LookupValue" dynamic-update="false" lazy="false">
		<!-- <cache usage="nonstrict-read-write"/> -->
		<id name="_LookupValueID" column="LookupValueID" unsaved-value="0" access="field">
			<generator class="identity" />
		</id>
		<many-to-one name="LookupType" column="LookupTypeID" fetch="select" />
		<property name="Value" column="Value" />
		<property name="Ordinal" column="Ordinal" />
	</class>

</hibernate-mapping>
