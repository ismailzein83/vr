<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TABS" namespace="TABS">
  <class name="PrepaidPostpaidOptions" table="PrepaidPostpaidOptions" dynamic-update="false" lazy="false" >
    <id name="PrepaidPostpaidOptionsID" column="PrepaidPostpaidID">
      <generator class="identity"/>
    </id>
    <many-to-one name="SupplierProfile" column="SupplierProfileID" fetch="select"/>
    <many-to-one name="CustomerProfile" column="CustomerProfileID" fetch="select"/>
    <many-to-one name="Supplier" column="SupplierID" fetch="select"/>
    <many-to-one name="Customer" column="CustomerID" fetch="select"/>

    <property name="_MinimumActionEmailInterval" column="MinimumActionEmailInterval" access="field" />
    <property name="Email" column="Email"/>
    <property name="Amount" column="Amount" />
    <property name="Percentage" column="Percentage" />
    
    <property name="IsCustomer" column="IsCustomer" type="YesNo" />
    <property name="IsPrepaid" column="IsPrepaid" type="YesNo"/>
    
    <property name="Actions" column="Actions"/>
  </class>
</hibernate-mapping>